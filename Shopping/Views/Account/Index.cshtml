@model UserModel;
@{
    ViewData["Title"] = "Login";
}
<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Login to your account</h2>
                    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
					<form asp-action="Login" asp-controller="Account">
						<div class="form-group">
							<label>Name</label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Name" />
						</div>
						<div class="form-group">
							<label>Email</label>
							<input type="text" asp-for="Email" class="form-control" placeholder="Email" />
						</div>
						<div class="form-group">
							<label>Password</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
						</div>
						<button type="submit" class="btn btn-default">Login</button>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->